 */

import java.util.Date;
import java.util.TreeMap;

public class OrderList {
	
	
	TreeMap <Date,OrderProcessing> allData ;

	public OrderList() {
		// TODO Auto-generated constructor stub
	}
	public OrderProcessing getDayOrders (Date day){
		
		return allData.get(day);				
	}
	public void getFiles (String path) throws ParseException{
	File aDirectory = new File(path);
	String[] filesInDir = aDirectory.list();
	int count = 0  ;
	for (String x:filesInDir){			
		if (x.contains(".csv")){
			System.out.println(x);
			count ++;
		}	
	}
	System.out.println("The count is: "+ count);
	Date today = new Date ();
	today.setTime(System.currentTimeMillis());
	String[] day = today.toString().split(" ");
	String fileName = "18-02-2019"; //day[2]+"_"+day[1]+"_"+day[5]+".csv";
	System.out.println(fileName);
	Date newday = new SimpleDateFormat("dd-MM-yyyy").parse(fileName);
			System.out.println(newday.toString());
			


    	}

}
